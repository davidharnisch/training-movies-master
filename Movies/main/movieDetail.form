<?xml version="1.0" encoding="utf-8"?>
<?data-format version="0.400"?>
<Form>
  <Name value="movieDetail" />
  <Caption value="Movie detail" />
  <Content>
    <Panel>
      <Name value="panel1" />
      <Orientation value="Vertical" />
      <Panel.Height value="#" />
      <Panel.Width value="*" />
      <Children>
        <Panel>
          <Name value="panel2" />
          <Orientation value="Vertical" />
          <Panel.Height value="#" />
          <Panel.Width value="*" />
          <Children>
            <Panel>
              <Name value="panel3" />
              <Orientation value="Vertical" />
              <Panel.Height value="#" />
              <Panel.Width value="*" />
              <Children>
                <TextBox>
                  <Name value="textBox1" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.name" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.name.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.name.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
                <TextBox>
                  <Name value="textBox2" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.type" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.type.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.type.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
                <TextBox>
                  <Name value="textBox3" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.yearOfRelease" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.yearOfRelease.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.yearOfRelease.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
                <TextBox>
                  <Name value="textBox4" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.id" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.id.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.id.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
              </Children>
              <CssClass>
                <CssClassConditional>
                  <ClassName value="{theme}-panel" />
                  <IsThemedStyle value="True" />
                </CssClassConditional>
              </CssClass>
            </Panel>
          </Children>
          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-panel" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </Panel>
      </Children>
      <CssClass>
        <CssClassConditional>
          <ClassName value="{theme}-panel" />
          <IsThemedStyle value="True" />
        </CssClassConditional>
      </CssClass>
    </Panel>
  </Content>
  <DataContext>
    <DataContext>
      <Children>
        <Complex>
          <Name value="detail" />
          <Caption value="Detail" />
          <Children>
            <Include>
              <Include reference="+DataEntities.basic" />
            </Include>
          </Children>
        </Complex>
        <Attribute>
          <Name value="movieDetailJson" />
          <Caption value="Movie detail json" />
          <DataContextParameter.IsInput value="True" />
          <DataContextParameter.IsInputRequired value="True" />
          <DeclaredType>
            <AttributeType />
          </DeclaredType>
        </Attribute>
        <Attribute>
          <Name value="id" />
          <Caption value="Id" />
          <DataContextParameter.IsInput value="True" />
          <DataContextParameter.IsInputRequired value="True" />
          <DeclaredType>
            <AttributeType />
          </DeclaredType>
        </Attribute>
      </Children>
    </DataContext>
  </DataContext>
  <OnCreate>
    <ActionEvent ReferencedAction="~init" />
  </OnCreate>
  <Actions>
    <ActionBlock>
      <Name value="init" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[// URL router
var url = apiobjects.urlRouter.findFormUrl(navigation.main.movieDetail.fullName)
//url.addString("name", form.detail.name)
url.addString("id", form.id)
url.updatePageUrl()

form.actions.loadData()

// URL router aby bylo přesměrování při zadání špatné URL na homepage
/*
if form.detail.hasValue() then
	
	else
	navigation.main.moviesList.go()
endif

*/
	








]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
    <ActionBlock>
      <Name value="loadData" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[form.detail.fromJson(form.movieDetailJson)]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
    <ActionBlock>
      <Name value="action1" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[form.detail.fromJson(form.movieDetailJson)]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
  </Actions>
</Form>