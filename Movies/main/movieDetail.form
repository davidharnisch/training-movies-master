<?xml version="1.0" encoding="utf-8"?>
<?data-format version="0.400"?>
<Form>
  <Name value="movieDetail" />
  <Caption value="Movie detail" />
  <Content>
    <Panel>
      <Name value="panel1" />
      <Orientation value="Vertical" />
      <Panel.Height value="#" />
      <Panel.Width value="*" />
      <Children>
        <Panel>
          <Name value="panel2" />
          <Orientation value="Vertical" />
          <Panel.Height value="#" />
          <Panel.Width value="*" />
          <Children>
            <Panel>
              <Name value="panel3" />
              <Orientation value="Vertical" />
              <Panel.Height value="#" />
              <Panel.Width value="*" />
              <Children>
                <TextBox>
                  <Name value="textBox1" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.name" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.name.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.name.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
                <TextBox>
                  <Name value="textBox2" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.type" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.type.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.type.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
                <TextBox>
                  <Name value="textBox3" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.yearOfRelease" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.yearOfRelease.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.yearOfRelease.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
                <TextBox>
                  <Name value="textBox4" />
                  <CaptionVAlign value="Middle" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="detail.id" />
                    <Binding SourceProperty="IsRequiredMarkVisible" Expression="detail.id.isRequired()" />
                    <Binding SourceProperty="Caption" Expression="detail.id.caption()" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-textbox" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </TextBox>
              </Children>
              <CssClass>
                <CssClassConditional>
                  <ClassName value="{theme}-panel" />
                  <IsThemedStyle value="True" />
                </CssClassConditional>
              </CssClass>
            </Panel>
          </Children>
          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-panel" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </Panel>
        <Button>
          <Name value="Create" />
          <Caption value="Create new" />
          <Panel.Height value="#" />
          <Panel.Width value="150px" />
          <OnClick>
            <ActionEvent ReferencedAction="~handler_button1_OnClick" />
          </OnClick>
          <Bindings>
            <Binding SourceProperty="IsVisible" Expression="not form.id.hasValue()" />
          </Bindings>
          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-button" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </Button>
        <Button>
          <Name value="Update" />
          <Caption value="Update" />
          <Panel.Height value="#" />
          <Panel.Width value="150px" />
          <OnClick>
            <ActionEvent ReferencedAction="~handler_Update_OnClick" />
          </OnClick>
          <Bindings>
            <Binding SourceProperty="IsVisible" Expression="form.id.hasValue()" />
          </Bindings>
          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-button" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </Button>
        <Button>
          <Name value="Delete" />
          <Caption value="Delete" />
          <Panel.Height value="#" />
          <Panel.Width value="150px" />
          <OnClick>
            <ActionEvent ReferencedAction="~handler_Delete_OnClick" />
          </OnClick>
          <Bindings>
            <Binding SourceProperty="IsVisible" Expression="form.id.hasValue()" />
          </Bindings>
          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-button" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </Button>
      </Children>
      <CssClass>
        <CssClassConditional>
          <ClassName value="{theme}-panel" />
          <IsThemedStyle value="True" />
        </CssClassConditional>
      </CssClass>
    </Panel>
  </Content>
  <DataContext>
    <DataContext>
      <Children>
        <Complex>
          <Name value="detail" />
          <Caption value="Detail" />
          <Children>
            <Include>
              <Include reference="+DataEntities.basic" />
            </Include>
          </Children>
        </Complex>
        <Attribute>
          <Name value="id" />
          <Caption value="Id" />
          <DataContextParameter.IsInput value="True" />
          <DeclaredType>
            <AttributeType />
          </DeclaredType>
        </Attribute>
      </Children>
    </DataContext>
  </DataContext>
  <OnCreate>
    <ActionEvent ReferencedAction="~init" />
  </OnCreate>
  <Actions>
    <ActionBlock>
      <Name value="init" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[// URL router
var url = apiobjects.urlRouter.findFormUrl(navigation.main.movieDetail.fullName)
//url.addString("name", form.detail.name)
url.addString("id", form.id)
url.updatePageUrl()

//load data

form.actions.loadData()


// URL router for redirect to movielist


if (form.detail.hasValue()) or (not form.id.hasValue()) then
	
	else
	navigation.main.moviesList.go()
endif


	








]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
    <ActionBlock>
      <Name value="loadData" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[
var response = apiobjects.moviesServer.getAsync("record?id=" + form.id)


if response.isError() then
	system.consoleError(response.getErrorMessage())
else
	form.detail.fromJson(response.getJsonString())

	
endif



//form.detail.fromJson(form.movieDetailJson)]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
    <ActionBlock>
      <Name value="handler_button1_OnClick" />
      <IsPrivate value="True" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[
var data = form.detail.toJson()

var response = apiobjects.moviesServer.postAsync("create",data)


if response.isError() then
	system.consoleError(response.getErrorMessage())
else
	
	
	navigation.main.moviesList.go()

	
endif]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
    <ActionBlock>
      <Name value="handler_Update_OnClick" />
      <IsPrivate value="True" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[var data = form.detail.toJson()

var response = apiobjects.moviesServer.postAsync("update",data)

if response.isError() then
	system.consoleError(response.getErrorMessage())
else
	
	
	//navigation.main.moviesList.go()

	
endif]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
    <ActionBlock>
      <Name value="handler_Delete_OnClick" />
      <IsPrivate value="True" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[
if isTrue(page.confirm("Are you sure?? You will loose all your data")) then 

var data = form.detail.toJson()

var response = apiobjects.moviesServer.postAsync("delete",data)

if response.isError() then
	system.consoleError(response.getErrorMessage())
else
	
	
	navigation.main.moviesList.go()

	
endif


else

endif]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
  </Actions>
</Form>